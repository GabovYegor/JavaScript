html
    head
        meta(charset='utf-8')
        title JQuery
        script(src="https://code.jquery.com/jquery-3.3.1.min.js")
        script(src="public/JQueryCode/pictureListCode.js")
        link(href='/public/styles/pictureListStyle.css' rel='stylesheet')
    body
        ol
            each picture in pictures
                li
                    img#image(src=picture.imagePath)
                    | Author: #{picture.author}
                    | Title: #{picture.title}
                    br
                    a(href='/loadPictureCard/' + picture.ID) Go to picture card
                    - for(let i = 0; i < 5; ++i)
                        br

        form(action='/addPicturePage' method="GET")
            input(type='submit' value='Add new Picture')
        form(action='/removePictureAction' method="POST")
            input#removeID(name = 'id' type='text' placeholder='ID')
            input(type='submit' value='Remove Picture')

