html
    head
        link(href='/public/styles/addPictureStyle.css', rel='stylesheet' )
    body
        h1 Add picture
        form(action='/addPictureAction' method='post')
            label Picture title:
            input(name='title' type='text' placeholder='Picture title')
            br

            label Picture author:
            input(name='author' type='text' placeholder='Picture author')
            br

            label Picture image:
            input(name='image' type='text' placeholder='Picture image')
            br

            label Picture description:
            textarea(name='description' placeholder='Picture description')
            br

            label Picture start price:
            input(name='startPrice' type='text' placeholder='Picture start price')
            br

            input(type='submit' value='Add picture')